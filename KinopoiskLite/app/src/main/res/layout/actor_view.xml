<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    >

    <ImageView
        android:id="@+id/actor_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="A photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewRoleName"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"

        android:variablePadding="true"

        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/actor_image_view"
        app:layout_constraintStart_toStartOf="@id/actor_image_view"
        app:layout_constraintTop_toBottomOf="@id/actor_image_view"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"

        android:text="Movie title"
        />

    <TextView
        android:id="@+id/textViewActorName"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"

        android:variablePadding="true"

        android:textColor="@color/red"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/actor_image_view"
        app:layout_constraintStart_toStartOf="@id/actor_image_view"
        app:layout_constraintTop_toBottomOf="@id/textViewRoleName"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"

        android:text="Movie title"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


